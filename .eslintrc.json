{
  "env" : {
    "es6"   : true,
    "node"  : true,
    "mocha" : true
  },
  "extends"       : "eslint:recommended",
  "parserOptions" : {
    "sourceType"  : "module",
    "ecmaVersion" : 8
  },
  "rules" : {
    "arrow-body-style" : [ "error", "always" ],
    "indent" : [ "error", 2,
      {
        "MemberExpression"   : 1,
        "outerIIFEBody"      : 1,
        "SwitchCase"         : 1,
        "VariableDeclarator" : 1
      }
    ],
    "linebreak-style"      : [ "error", "unix"   ],
    "max-len"              : [
      "error",
      78,
      {
        "ignoreUrls"             : true,
        "ignoreTemplateLiterals" : true,
        "ignoreRegExpLiterals"   : true
      }
    ],
    "no-console"           : [ 0                 ],
    "no-prototype-builtins": 1,
    "no-underscore-dangle" : [ 0                 ],
    "quotes"               : [ "error", "single" ],
    "semi"                 : [ "error", "always" ]
  }
}